<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== ACCIÓN DE REPORTE ==================== -->
    <record id="action_report_herbario_specimen" model="ir.actions.report">
        <field name="name">Ficha de Espécimen</field>
        <field name="model">herbario.specimen</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">herbario_espoch.report_specimen_card</field>
        <field name="report_file">herbario_espoch.report_specimen_card</field>
        <field name="binding_model_id" ref="model_herbario_specimen"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_us"/>
    </record>

    <!-- ==================== TEMPLATE DEL REPORTE ==================== -->
    <template id="report_specimen_card">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="specimen">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Encabezado -->
                        <div class="row mb-3">
                            <div class="col-8">
                                <h2 class="mt-0">
                                    <strong>Herbario ESPOCH</strong>
                                </h2>
                                <h3 class="text-muted">Ficha de Espécimen</h3>
                            </div>
                            <div class="col-4 text-right">
                                <t t-if="specimen.qr_code_id and specimen.qr_code_id.qr_image">
                                    <img t-att-src="'data:image/png;base64,%s' % specimen.qr_code_id.qr_image.decode('utf-8')" 
                                         style="max-width: 120px; max-height: 120px;"/>
                                </t>
                            </div>
                        </div>

                        <hr/>

                        <!-- Código del Herbario -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <h4 class="text-primary">
                                    <strong>Código: <span t-field="specimen.codigo_herbario"/></strong>
                                </h4>
                            </div>
                        </div>

                        <!-- Información Taxonómica -->
                        <div class="row">
                            <div class="col-12">
                                <h5 class="bg-primary text-white p-2">Taxonomía</h5>
                                <table class="table table-sm">
                                    <tr>
                                        <td width="30%"><strong>Nombre Científico:</strong></td>
                                        <td><em><span t-field="specimen.taxon_id.name"/></em></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Autor:</strong></td>
                                        <td><span t-field="specimen.taxon_id.scientific_author"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Familia:</strong></td>
                                        <td><span t-field="specimen.taxon_id.family_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Género:</strong></td>
                                        <td><span t-field="specimen.taxon_id.genero"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Especie:</strong></td>
                                        <td><span t-field="specimen.taxon_id.especie"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Información de Colección -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <h5 class="bg-success text-white p-2">Información de Colección</h5>
                                <table class="table table-sm">
                                    <tr>
                                        <td width="30%"><strong>Determinado por:</strong></td>
                                        <td><span t-esc="', '.join(specimen.determiner_ids.mapped('name'))"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Número de Cartulina:</strong></td>
                                        <td><span t-field="specimen.numero_cartulina"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Código de Herbario:</strong></td>
                                        <td><span t-field="specimen.codigo_herbario"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Estado:</strong></td>
                                        <td><span t-field="specimen.status"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Ubicaciones de Recolección -->
                        <t t-if="specimen.collection_site_ids">
                            <div class="row mt-3">
                                <div class="col-12">
                                    <h5 class="bg-danger text-white p-2">Ubicaciones de Recolección</h5>
                                    <t t-foreach="specimen.collection_site_ids" t-as="location">
                                        <div class="mb-2 p-2 border">
                                            <table class="table table-sm table-borderless mb-0">
                                                <tr>
                                                    <td width="30%"><strong>Colector:</strong></td>
                                                    <td><span t-field="location.colector"/></td>
                                                </tr>
                                                <tr t-if="location.fecha_recoleccion">
                                                    <td><strong>Fecha:</strong></td>
                                                    <td><span t-field="location.fecha_recoleccion"/></td>
                                                </tr>
                                                <tr>
                                                    <td><strong>País:</strong></td>
                                                    <td><span t-field="location.country_id.name"/></td>
                                                </tr>
                                                <tr>
                                                    <td><strong>Provincia:</strong></td>
                                                    <td><span t-field="location.province_id.name"/></td>
                                                </tr>
                                                <tr t-if="location.locality_id">
                                                    <td><strong>Localidad:</strong></td>
                                                    <td><span t-field="location.locality_id.name"/></td>
                                                </tr>
                                                <tr t-if="location.latitude and location.longitude">
                                                    <td><strong>Coordenadas:</strong></td>
                                                    <td>
                                                        Lat: <span t-field="location.latitude"/>, 
                                                        Lon: <span t-field="location.longitude"/>
                                                    </td>
                                                </tr>
                                                <tr t-if="location.elevation">
                                                    <td><strong>Altitud:</strong></td>
                                                    <td><span t-field="location.elevation"/> m.s.n.m.</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </t>

                        <!-- Descripción -->
                        <t t-if="specimen.description_specimen">
                            <div class="row mt-3">
                                <div class="col-12">
                                    <h5 class="bg-info text-white p-2">Descripción</h5>
                                    <p><span t-field="specimen.description_specimen"/></p>
                                </div>
                            </div>
                        </t>

                        <!-- Fenología -->
                        <t t-if="specimen.fenologia">
                            <div class="row mt-3">
                                <div class="col-12">
                                    <h5 class="bg-warning p-2">Fenología</h5>
                                    <p><span t-field="specimen.fenologia"/></p>
                                </div>
                            </div>
                        </t>

                        <!-- Pie de página -->
                        <div class="row mt-5">
                            <div class="col-12 text-center text-muted">
                                <small>
                                    Herbario Virtual ESPOCH - Escuela Superior Politécnica de Chimborazo<br/>
                                    Generado: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/>
                                </small>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- ==================== REPORTE DE ETIQUETA QR ==================== -->
    <record id="action_report_qr_label" model="ir.actions.report">
        <field name="name">Etiqueta QR</field>
        <field name="model">herbario.specimen</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">herbario_espoch.report_qr_label</field>
        <field name="report_file">herbario_espoch.report_qr_label</field>
        <field name="binding_model_id" ref="model_herbario_specimen"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_qr_label">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="specimen">
                <div class="page" style="text-align: center; padding: 40px;">
                    <h2><span t-field="specimen.codigo_herbario"/></h2>
                    <h3 class="text-muted"><em><span t-field="specimen.nombre_cientifico"/></em></h3>
                    
                    <t t-if="specimen.qr_code_id and specimen.qr_code_id.qr_image">
                        <div style="margin: 30px auto;">
                            <img t-att-src="'data:image/png;base64,%s' % specimen.qr_code_id.qr_image.decode('utf-8')" 
                                 style="max-width: 300px;"/>
                        </div>
                    </t>
                    
                    <p class="text-muted" style="margin-top: 20px;">
                        <strong>Familia:</strong> <span t-field="specimen.taxon_id.family_id.name"/><br/>
                        <strong>Herbario ESPOCH</strong>
                    </p>
                </div>
            </t>
        </t>
    </template>
</odoo>