<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== VISTA DE ÁRBOL PARA FAMILIAS ==================== -->
    <record id="view_herbario_family_tree" model="ir.ui.view">
        <field name="name">herbario.family.tree</field>
        <field name="model">herbario.family</field>
        <field name="arch" type="xml">
            <tree string="Familias" decoration-muted="not active">
                <field name="name"/>
                <field name="total_taxons" string="# Taxones"/>
                <field name="active" widget="boolean_toggle"/>
                <!-- Botón de eliminar: Llama a la función segura -->
                <button name="action_safe_delete" type="object" icon="fa-trash" 
                        class="text-danger" title="Eliminar Familia"
                        confirm="¿Está seguro de que desea eliminar esta familia permanentemente?"/>
            </tree>
        </field>
    </record>

    <!-- ==================== VISTA DE ÁRBOL PARA TAXONES (CON BOTÓN ELIMINAR) ==================== -->
    <record id="view_herbario_taxon_tree" model="ir.ui.view">
        <field name="name">herbario.taxon.tree</field>
        <field name="model">herbario.taxon</field>
        <field name="arch" type="xml">
            <tree string="Taxones" decoration-muted="not active">
                <field name="name"/>
                <field name="family_id"/>
                <field name="genero"/>
                <field name="especie"/>
                <field name="total_specimens" string="# Especímenes"/>
                <field name="active" widget="boolean_toggle"/>
                <!-- Botón de eliminar: Llama a la función segura -->
                <button name="action_safe_delete" type="object" icon="fa-trash" 
                        class="text-danger" title="Eliminar Taxón"
                        confirm="¿Está seguro de que desea eliminar este taxón permanentemente?"/>
            </tree>
        </field>
    </record>

    <!-- ==================== VISTA DE ÁRBOL PARA AUTORES ==================== -->
    <record id="view_herbario_author_tree" model="ir.ui.view">
        <field name="name">herbario.author.tree</field>
        <field name="model">herbario.author</field>
        <field name="arch" type="xml">
            <tree string="Autores">
                <field name="name"/>
                <button name="action_safe_delete" type="object" icon="fa-trash" 
                        class="text-danger" title="Eliminar Autor"
                        confirm="¿Está seguro de que desea eliminar este autor permanentemente?"/>
            </tree>
        </field>
    </record>

    <!-- ==================== VISTA DE ÁRBOL PARA DETERMINADORES ==================== -->
    <record id="view_herbario_determiner_tree" model="ir.ui.view">
        <field name="name">herbario.determiner.tree</field>
        <field name="model">herbario.determiner</field>
        <field name="arch" type="xml">
            <tree string="Determinadores">
                <field name="name"/>
                <button name="action_safe_delete" type="object" icon="fa-trash" 
                        class="text-danger" title="Eliminar Determinador"
                        confirm="¿Está seguro de que desea eliminar este determinador permanentemente?"/>
            </tree>
        </field>
    </record>

    <!-- ==================== VISTA DE ÁRBOL PARA COLECTORES ==================== -->
    <record id="view_herbario_collector_tree" model="ir.ui.view">
        <field name="name">herbario.collector.tree</field>
        <field name="model">herbario.collector</field>
        <field name="arch" type="xml">
            <tree string="Colectores">
                <field name="name"/>
                <button name="action_safe_delete" type="object" icon="fa-trash" 
                        class="text-danger" title="Eliminar Colector"
                        confirm="¿Está seguro de que desea eliminar este colector permanentemente?"/>
            </tree>
        </field>
    </record>

    <!-- ==================== VISTA DE ÁRBOL PARA SITIOS DE COLECCIÓN (PRINCIPAL) ==================== -->
    <record id="view_herbario_collection_site_tree" model="ir.ui.view">
        <field name="name">herbario.collection.site.tree</field>
        <field name="model">herbario.collection.site</field>
        <field name="arch" type="xml">
            <tree string="Sitios de Colección">
                <field name="specimen_id" string="Código Espécimen"/>
                <field name="numero_coleccion"/>
                <field name="fecha_recoleccion"/>
                <field name="country_id"/>
                <field name="province_id"/>
                <field name="lower_id"/>
                <field name="locality_id"/>
                <field name="vicinity_id"/>
                <field name="coordenadas_zona" string="Coordenadas"/>
                <field name="elevation"/>
            </tree>
        </field>
    </record>

    <!-- ==================== VISTA DE ÁRBOL ==================== -->
    <record id="view_herbario_specimen_tree" model="ir.ui.view">
        <field name="name">herbario.specimen.tree</field>
        <field name="model">herbario.specimen</field>
        <field name="arch" type="xml">
            <tree string="Especímenes" decoration-muted="status == 'archivado'" decoration-info="status == 'borrador'">
                <field name="codigo_herbario"/>
                <field name="primary_image" widget="image" width="50"/>
                <field name="taxon_id" string="Taxón"/>
                <field name="total_ubicaciones"/>
                <field name="status" widget="badge" decoration-success="status == 'activo'" decoration-warning="status == 'borrador'" decoration-info="status == 'revision'"/>
                <field name="es_publico" widget="boolean_toggle"/>
                <field name="created_at"/>
            </tree>
        </field>
    </record>

    <!-- ==================== VISTA DE FORMULARIO ==================== -->
    <record id="view_herbario_specimen_form" model="ir.ui.view">
        <field name="name">herbario.specimen.form</field>
        <field name="model">herbario.specimen</field>
        <field name="arch" type="xml">
            <form string="Espécimen Botánico">
                <header>
                    <button name="action_generate_qr" string="Generar QR" type="object" class="oe_highlight" icon="fa-qrcode"/>
                    <button name="action_view_history" string="Ver Historial" type="object" icon="fa-history"/>
                    <field name="status" widget="statusbar" statusbar_visible="borrador,revision,activo"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_history" type="object" class="oe_stat_button" icon="fa-history">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Ver</span>
                                <span class="o_stat_text">Historial</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger" invisible="status != 'archivado'"/>

                    <field name="primary_image" widget="image" class="oe_avatar" options="{'preview_image': 'primary_image'}"/>

                    <!-- ==================== BLOQUE DE TÍTULO Y TAXÓN (SOLUCIÓN SIMPLIFICADA) ==================== -->
                    <div class="oe_title">
                        <h1>
                            <!-- Campo Many2one para buscar y seleccionar. La creación se maneja con los campos de abajo. -->
                            <field name="taxon_id" placeholder="Buscar un taxón existente..." options="{'no_create': True, 'no_create_edit': True}"/>
                        </h1>
                        <h2><field name="codigo_herbario" readonly="1"/></h2>
                    </div>

                    <!-- Campos para crear un nuevo taxón, solo visibles si no se ha seleccionado uno existente -->
                    <div class="row mb-3" invisible="taxon_id">
                        <div class="col-lg-6">
                            <label for="taxon_name_new" string="O ingrese un nuevo Nombre Científico"/>
                            <field name="taxon_name_new" placeholder="Ej: Género especie"/>
                        </div>
                        <div class="col-lg-4">
                            <label for="taxon_family_id" string="Familia (requerido para nuevo taxón)"/>
                            <field name="taxon_family_id" placeholder="Seleccione o cree una familia..." options="{'no_create': False, 'no_open': True}" required="taxon_name_new != False"/>
                        </div>
                    </div>

                    <group>
                        <group string="Taxonomía">
                            <!-- Campos que se muestran cuando se crea un nuevo taxón -->
                            <field name="taxon_genero" invisible="taxon_id"/>
                            <field name="taxon_especie" invisible="taxon_id"/>
                            <!-- Campos que se muestran cuando ya hay un taxón seleccionado -->
                            <field name="taxon_family_related" invisible="not taxon_id"/>
                            <field name="taxon_genero_related" invisible="not taxon_id"/>
                            <field name="taxon_especie_related" invisible="not taxon_id"/>
                        </group>
                    </group>

                    <group>
                        <group string="Identificación">
                            <field name="numero_cartulina"/>
                            <field name="index_text" widget="char_selection" options="{'selection_callback': '_get_existing_indices'}"/>
                            <field name="herbarium_ids" widget="many2many_tags"/>
                            <field name="author_ids"/>
                            <field name="collector_ids"/>
                            <field name="determiner_ids"/>
                            <field name="patente_year"/>
                        </group>
                    </group>

                    <group>
                        <group string="Estado">
                            <field name="status"/>
                            <field name="es_publico"/>
                        </group>
                        <group string="Estadísticas">
                            <field name="total_ubicaciones" readonly="1"/>
                            <field name="primary_location" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Descripción">
                            <group>
                                <field name="description_specimen" nolabel="1" placeholder="Descripción botánica detallada..."/>
                            </group>
                            <group>
                                <field name="phenology"/>
                            </group>
                        </page>

                        <page string="Ubicaciones de Recolección">
                            <field name="collection_site_ids">
                                <tree editable="bottom">
                                    <field name="specimen_id" column_invisible="1"/>
                                    <field name="is_primary" widget="boolean_toggle"/>
                                    <field name="numero_coleccion"/>
                                    <field name="fecha_recoleccion" optional="show"/>
                                    <field name="country_id" options="{'no_create_edit': True}"/>
                                    <field name="province_id" options="{'no_create_edit': True}"/>
                                    <field name="lower_id" options="{'no_create_edit': True}"/>
                                    <field name="locality_id" options="{'no_create_edit': True}"/>
                                    <field name="vicinity_id" options="{'no_create_edit': True}"/>
                                    <!--<field name="coordinate_id" string="Coordenadas (Seleccionar)" widget="many2one"/>-->
                                    <field name="coordenadas_zona" string="Coordenadas (Ingresar)"/>
                                    <field name="latitude_char" string="Latitud"/>
                                    <field name="longitude_char" string="Longitud"/>
                                    <field name="elevation" string="Elevación"/>
                                    <button name="action_open_in_maps" type="object" icon="fa-map-marker" string="Ver en mapa"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <field name="specimen_id" invisible="1"/>
                                        <group>
                                            <group string="Colección">
                                                <field name="numero_coleccion"/>
                                                <field name="fecha_recoleccion"/>
                                                <field name="metodo_recoleccion"/>
                                                <field name="is_primary"/>
                                            </group>
                                            <group string="Ubicación Geográfica">
                                                <field name="country_id" options="{'no_create_edit': True}"/>
                                                <field name="province_id" options="{'no_create_edit': True}"/>
                                                <field name="lower_id" options="{'no_create_edit': True}"/>
                                                <field name="locality_id" options="{'no_create_edit': True}"/>
                                                <field name="vicinity_id" options="{'no_create_edit': True}"/>
                                            </group>
                                        </group>
                                        <group>
                                            <group string="Coordenadas GPS">
                                                <field name="coordenadas_zona" string="Coordenadas (Ingresar)"/>
                                                <field name="latitude" string="Latitud" readonly="1" force_save="1"/>
                                                <field name="longitude" string="Longitud" readonly="1" force_save="1"/>
                                                <field name="elevation" string="Elevación"/>
                                                <field name="maps_url" widget="url"/>
                                            </group>
                                        </group>
                                        <group>
                                            <button name="action_open_in_maps" type="object" string="Abrir en Google Maps" class="oe_highlight" icon="fa-map-marker"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <page string="Imágenes">
                            <field name="image_ids" nolabel="1" context="{'default_taxon_id': taxon_id}" force_save="1">
                                <tree editable="bottom">
                                    <!-- El campo para subir el archivo directamente -->
                                    <field name="image_data" string="Subir Archivo" widget="image" options="{'size': [80, 80]}"/>
                                    <field name="description"/>
                                    <field name="is_primary" string="Principal" widget="boolean_toggle"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="image_data" widget="image" class="oe_avatar"
                                            options="{'preview_image': 'image_data', 'size': [0, 600]}"/>
                                        <field name="description"/>
                                        <field name="is_primary"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <page string="Código QR">
                            <field name="qr_code_ids">
                                <tree>
                                    <field name="qr_image" widget="image" width="100"/>
                                    <field name="qr_url" widget="url"/>
                                    <field name="resolution"/>
                                    <field name="version"/>
                                    <field name="download_count"/>
                                    <field name="scan_count"/>
                                    <field name="generation_date"/>
                                    <field name="obsolete" widget="boolean_toggle"/>
                                    <button name="action_download" type="object" string="Descargar" icon="fa-download"/>
                                    <button name="action_regenerate" type="object" string="Regenerar" icon="fa-refresh"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Auditoría" groups="herbario_espoch.group_herbario_admin_ti">
                            <group>
                                <group>
                                    <field name="created_by" readonly="1"/>
                                    <field name="created_at" readonly="1"/>
                                </group>
                                <group>
                                    <field name="updated_by" readonly="1"/>
                                    <field name="updated_at" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ==================== VISTA KANBAN ==================== -->
    <record id="view_herbario_specimen_kanban" model="ir.ui.view">
        <field name="name">herbario.specimen.kanban</field>
        <field name="model">herbario.specimen</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="codigo_herbario"/>
                <field name="taxon_id"/>
                <field name="status"/>
                <field name="taxon_family_related"/>
                <field name="primary_image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_herbario_kanban_card">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('herbario.specimen', 'primary_image', record.id.raw_value)" alt="Espécimen"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="taxon_id"/></strong>
                                <div>
                                    <field name="codigo_herbario"/>
                                </div>
                                <div>
                                    <field name="taxon_family_related"/>
                                </div>
                                <div class="o_kanban_tags_section">
                                    <field name="status" widget="label_selection" options="{'classes': {'borrador': 'warning', 'revision': 'info', 'activo': 'success', 'archivado': 'default'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ==================== BÚSQUEDA Y FILTROS ==================== -->
    <record id="view_herbario_specimen_search" model="ir.ui.view">
        <field name="name">herbario.specimen.search</field>
        <field name="model">herbario.specimen</field>
        <field name="arch" type="xml">
            <search string="Buscar Especímenes">
                <field name="codigo_herbario"/>
                <field name="taxon_id"/>
                <field name="index_text"/>
                <field name="determiner_ids"/>

                <filter name="filter_activos" string="Activos" domain="[('status', '=', 'activo')]"/>
                <filter name="filter_publicos" string="Públicos" domain="[('es_publico', '=', True)]"/>
                <filter name="filter_con_imagenes" string="Con Imágenes" domain="[('image_ids', '!=', False)]"/>
                <!-- CORRECCIÓN: Se cambia el dominio para usar un campo almacenable (collection_site_ids) en lugar de uno computado no almacenado (total_ubicaciones) -->
                <filter name="filter_con_ubicaciones" string="Con Ubicaciones" domain="[('collection_site_ids', '!=', False)]"/>

                <separator/>
                <filter name="filter_mis_especimenes" string="Mis Especímenes" domain="[('created_by', '=', uid)]"/>

                <group expand="0" string="Agrupar por">
                    <filter name="group_taxon" string="Taxón" context="{'group_by': 'taxon_id'}"/>
                    <filter name="group_status" string="Estado" context="{'group_by': 'status'}"/>
                    <filter name="group_created_by" string="Creado por" context="{'group_by': 'created_by'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ==================== ACCIÓN ==================== -->
    <record id="action_herbario_specimen" model="ir.actions.act_window">
        <field name="name">Especímenes</field>
        <field name="res_model">herbario.specimen</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_herbario_specimen_search"/>
        <field name="context">{'search_default_filter_activos': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear el primer espécimen del herbario
            </p>
            <p>
                Registra especímenes botánicos con información taxonómica completa,
                ubicaciones de recolección, imágenes y códigos QR.
            </p>
        </field>
    </record>

    <!-- ==================== VISTA DE ÁRBOL POR TAXÓN ==================== -->
    <record id="view_herbario_specimen_tree_by_taxon" model="ir.ui.view">
        <field name="name">herbario.specimen.tree</field>
        <field name="model">herbario.specimen</field>
        <field name="arch" type="xml">
            <tree string="Especímenes por Taxón" default_order="taxon_id">
                <field name="taxon_id" string="Taxón"/>
                <field name="codigo_herbario" string="Código Herbario"/>
                <field name="numero_cartulina" string="# Cartulina"/>
                <field name="determiner_ids" string="Determinadores"/>
                <field name="primary_location" string="Ubicación Principal"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

</odoo>
