<odoo>
    <!-- Snippet: Listado de Especímenes -->
    <template id="s_herbario_repository_block" name="Listado de Especímenes">
        <!-- CORRECCIÓN: Envolver el contenido en una etiqueta <t t-name="..."> -->
        <t t-name="herbario_espoch.s_herbario_repository_block">
            <section class="s_herbario_repository py-5" data-name="Listado de Especímenes">
                <div class="container-fluid">
                    <!-- Fila para los botones de vista (alineados con la columna de resultados) -->
                    <div class="row mb-3">
                        <div class="col-lg-9 offset-lg-3 d-flex justify-content-end">
                            <div class="herbario_view_switch"></div>
                        </div>
                    </div>
                    <div class="row">
                        <!-- Columna de Filtros (Barra Lateral Izquierda) -->
                        <div class="col-lg-3">
                            <div class="herbario_filters_sidebar sticky-top" style="top: 20px;">
                                <!-- El contenido de los filtros se inyectará aquí por JS -->
                                <div class="text-center text-muted">Cargando filtros...</div>
                            </div>
                        </div>

                        <!-- Columna de Resultados (Contenido Principal) -->
                        <div class="col-lg-9">
                            <div class="herbario_results row">
                                <!-- Contenido de Placeholder para evitar errores en el editor de Odoo -->
                                <div class="col-12"><div class="alert alert-info text-center">Cargando especímenes...</div></div>
                            </div>
                            <div class="herbario_pagination mt-4 d-flex justify-content-center"></div>
                        </div>
                    </div>
                </div>
            </section>
        </t>
    </template>

    <!-- Registrar snippet en la barra de bloques -->
    <template id="add_herbario_snippet_to_menu" inherit_id="website.snippets">
        <!-- 1. Busca el contenedor de snippets de "Features" para agregar el nuestro al lado -->
        <xpath expr="//div[@id='snippet_feature']" position="after">
            <!-- 2. Crea una nueva categoría para tu módulo -->
            <div id="snippet_herbario" class="o_panel">
                <div class="o_panel_header">Herbario</div>
                <div class="o_panel_body">
                    <!-- 3. Agrega tu snippet usando data-snippet -->
                    <t t-snippet="herbario_espoch.s_herbario_repository_block" t-thumbnail="/herbario_espoch/static/description/snippet_icon.jpg"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
